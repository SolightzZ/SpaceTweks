  "bottle_base_hover_text": {
    "type": "stack_panel",
    "orientation": "vertical",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 4, 3 ],
    "size": [ "100%cm", "100%c" ],
    "controls": [
      {
        "potion_name": {
          "type": "panel",
          "size": [ "100%c", 10 ],
          "controls": [
            {
              "type_name_text@CrisXolt_Brewing_Guide_common.hover_text_label": {
                "offset": [ 0, 0 ],
                "size": [ "default", 10 ],
                "text": "$hover_panel_text"
              }
            }
          ]
        }
      },
      {
        "no_effects_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%c", 10 ],
          "controls": [
            {
              "type_name_text@CrisXolt_Brewing_Guide_common.hover_text_label": {
                "offset": [ 0, 0 ],
                "size": [ "default", "default" ],
                "color": [ 0.66, 0.66, 0.66 ],
                "text": "potion.empty"
              }
            }
          ]
        }
      }
    ]
  },

  "hover_text_label": {
    "type": "label",
    "offset": [ 4, 3 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "layer": 2,
    "color": "$hover_panel_text_color",
    "$hover_panel_text_color|default": [ 1.0, 1.0, 1.0 ],
    "text": "$hover_panel_text",
    "shadow": false,
    "size": "$hover_text_size",
    "$hover_text_size|default": [ "default", "default" ],
    "$hover_panel_text|default": ""
  },

  "hover_text_image": {
    "type": "image",
    "allow_clipping": false,
    "$hover_text_alpha|default": 1.0,
    "alpha": "$hover_text_alpha",
    "texture": "textures/ui/purpleBorder",
    "size": [ "100%c+8px", "100%c+8px" ],
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "offset": [ 22, 0 ],
    "layer": 150,
    "$hover_text_label_control|default": "CrisXolt_Brewing_Guide_common.hover_text_label",
    "controls": [
      { "text@$hover_text_label_control": { } }
    ]
  },

  "item_panel": {
    "type": "panel",
    "size": [ 18, 18 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$background_images": "CrisXolt_Brewing_Guide_textures.main_cell_image",
    "$icon_item_data": 0,
    "controls": [
      { "bg_image@$background_images": { } },
      {
        "icon": {
          "type": "custom",
          "renderer": "inventory_item_renderer",
          "layer": 10,
          "size": [ 16, 16 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 1, 1 ],
          "$number_aux_index": 65536,
          "property_bag": {
            "#item_id_aux": "(($icon_item_id * $number_aux_index) + $icon_item_data)"
          }
        }
      },
      {
        "button@common.button": {
          "size": [ 18, 18 ],
          "$pressed_button_name": "unset",
          "controls": [
            {
              "hover@common.empty_panel": {
                "size": [ 18, 18 ],
                "controls": [
                  { "hover_text_image@CrisXolt_Brewing_Guide_common.hover_text_image": { } },
                  {
                    "white_border@common.white_border_slot": {
                      "layer": 8,
                      "alpha": 0.5,
                      "size": [ 18, 18 ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}