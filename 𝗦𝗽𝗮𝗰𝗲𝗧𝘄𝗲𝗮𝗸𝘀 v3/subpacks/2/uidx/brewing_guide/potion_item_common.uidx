                    "default_text@CrisXolt_Brewing_Guide_common.hover_text_label": {
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "offset": [ 0 ,0 ],
                      "color": "$second_hover_panel_color",
                      "size": [ "default", 10 ],
                      "text": "$second_hover_panel_text"
                    }
                  }
                ]
              }
